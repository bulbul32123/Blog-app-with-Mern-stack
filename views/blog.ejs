<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Blog Detail</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-5">
      <h1 class="mt-2 mb-3"><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" alt="" width="700px" />
      <p class="mt-3"><%= blog.content %></p>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" /> <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3 mb-5">
       <% if (locals.user) { %>
        <div class="container">
            <div class="bg-white py-6 py-md-8 py-lg-12">
                <div class="container px-4 px-md-8">
                  <h2 class="mb-4 text-center text-2xl font-weight-bold text-dark mb-md-8 mb-lg-12">Comment (<%= comments.length %>)</h2>
              
                  <form action="/blog/comment/<%= blog._id%>" method="post" class="mb-4 d-flex align-items-center justify-content-between border-top border-bottom py-4">
                        <div style="width: 60%;">
                          <input
                            type="text"
                            name="content"
                            class="form-control"
                            placeholder="Enter your comment"
                          />
                        </div>
                        <button type="submit" class="btn btn-outline-secondary px-4 py-2">Add a comment</>
                  </div>
              
                  <% comments.forEach(comment => { %>
                    <div class="border-top">
                        <div class="py-4 py-md-8">
                            <div>
                                <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="33px">
                                <span class="font-weight-bold"><%= comment.createdBy.fullName %></span>
                            </div>
                            <p class="text-muted mt-2"><%= comment.content %></p>
                        </div>
                    </div>
    <% }) %>
                </div>
              </div>
              
        </div>
       <% } %>
    </div>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>


